<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailStory.DetailStoryActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_story"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shani_sempurna" />

    <TextView
        android:id="@+id/title_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Shani Indira Natio"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <TextView
        android:id="@+id/description_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Sample description"
        android:textAppearance="?attr/textAppearanceBody1" />
</LinearLayout>